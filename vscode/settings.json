        "/Users/xibo.wang/projects/dotfiles/vscode/apc-extension/typescript-error.css",
        "/Users/xibo.wang/projects/dotfiles/vscode/apc-extension/side-bar.css",
        "/Users/xibo.wang/projects/dotfiles/vscode/apc-extension/tab-bar.css",
        "/Users/xibo.wang/projects/dotfiles/vscode/apc-extension/welcome-page.css",
        "/Users/xibo.wang/projects/dotfiles/vscode/apc-extension/status-bar.css",
