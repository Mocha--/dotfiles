// Place your settings in this file to overwrite the default settings
{
    /*
     * Window
     */
    "window.newWindowDimensions": "fullscreen",
    "window.titleBarStyle": "native",
    "window.customTitleBarVisibility": "never",
    /*
     * Explorer
     */
    "explorer.openEditors.visible": 1,
    "explorer.confirmDelete": false,
    "explorer.compactFolders": false,
    /*
     * Workbench
     */
    "workbench.editor.enablePreview": false,
    "workbench.startupEditor": "none",
    "workbench.tree.renderIndentGuides": "none",
    "workbench.tree.indent": 16,
    "workbench.activityBar.iconClickBehavior": "focus",
    "workbench.productIconTheme": "fluent-icons",
    "workbench.colorTheme": "Gruvbox Dark Medium",
    "workbench.tips.enabled": false,
    "workbench.iconTheme": "bearded-icons",
    "workbench.activityBar.location": "hidden",
    "workbench.colorCustomizations": {
        "tab.activeBackground": "#2f3e46",
        "editorSuggestWidget.border": "#7f4a5a",
        "editorSuggestWidget.selectedBackground": "#c56c8640",
        "editorSuggestWidget.focusHighlightForeground": "#c56c86",
        "editorSuggestWidget.highlightForeground": "#c56c86",
        "editorSuggestWidget.foreground": "#6c938a",
        "editorSuggestWidget.selectedForeground": "#6c938a",
        "editorBracketHighlight.foreground1": "#e76f51",
        "editorBracketHighlight.foreground2": "#e5989b",
        "editorBracketHighlight.foreground3": "#ef476f",
        "editorBracketHighlight.foreground4": "#e07a5f",
        "editorBracketHighlight.foreground5": "#db6904",
        "editorBracketHighlight.foreground6": "#ffc8dd",
        "editorError.foreground": "#FB4934",
        "editor.selectionHighlightBorder": "#FB4934",
        "editor.wordHighlightBorder": "#FB4934",
    },
    /*
     * Editor
     */
    "editor.fontSize": 16,
    "editor.lineHeight": 28,
    "editor.letterSpacing": 0.5,
    "editor.fontWeight": "normal",
    "editor.fontFamily": "'Fira Code', 'Roboto Mono', 'Droid Sans Mono', 'Courier New', monospace, 'Droid Sans Fallback'",
    "editor.wordWrap": "on",
    "editor.colorDecorators": false,
    "editor.acceptSuggestionOnEnter": "off",
    "editor.snippetSuggestions": "bottom",
    "editor.suggestFontSize": 16,
    "editor.suggestLineHeight": 32,
    "editor.renderWhitespace": "boundary",
    "editor.cursorBlinking": "phase",
    "editor.parameterHints.enabled": false,
    "editor.suggest.showInlineDetails": false,
    "editor.scrollbar.verticalScrollbarSize": 0,
    "editor.scrollbar.vertical": "hidden",
    "editor.hideCursorInOverviewRuler": true,
    "editor.guides.indentation": false,
    "editor.accessibilitySupport": "off",
    "editor.autoClosingDelete": "always",
    "editor.linkedEditing": true,
    "editor.minimap.showSlider": "always",
    "editor.minimap.scale": 2,
    "editor.minimap.size": "proportional",
    "editor.fontLigatures": true,
    "editor.tabSize": 2,
    "editor.bracketPairColorization.independentColorPoolPerBracketType": true,
    "editor.matchBrackets": false,
    "editor.quickSuggestions": {
        "other": true,
        "comments": false,
        "strings": true
    },
    "editor.inlayHints.enabled": "onUnlessPressed",
    "editor.inlayHints.fontSize": 14,
    "editor.inlayHints.padding": true,
    /*
     * Typescript
     */
    "typescript.suggest.autoImports": false,
    "typescript.updateImportsOnFileMove.enabled": "never",
    "typescript.preferences.jsxAttributeCompletionStyle": "none",
    "typescript.inlayHints.parameterNames.enabled": "none",
    "typescript.inlayHints.variableTypes.suppressWhenTypeMatchesName": true,
    "typescript.inlayHints.variableTypes.enabled": true,
    "typescript.inlayHints.propertyDeclarationTypes.enabled": true,
    "typescript.inlayHints.functionLikeReturnTypes.enabled": true,
    "typescript.inlayHints.parameterTypes.enabled": true,
    "typescript.inlayHints.enumMemberValues.enabled": true,
    /**
     * Errorlens
     */
    "errorLens.messageBackgroundMode": "message",
    "errorLens.padding": "2px 4px",
    "errorLens.borderRadius": "4px",
    "errorLens.margin": "48px",
    /*
     * Vim
     */
    "vim.leader": "\\",
    "vim.easymotion": true,
    "vim.easymotionMarkerBackgroundColor": "#7f4a5a",
    "vim.easymotionMarkerForegroundColorOneChar": "#6c938a",
    "vim.useSystemClipboard": true,
    "vim.hlsearch": true,
    "vim.mouseSelectionGoesIntoVisualMode": false,
    "vim.searchHighlightColor": "#7f4a5a",
    "vim.insertModeKeyBindingsNonRecursive": [
        {
            "before": [
                "j",
                "k"
            ],
            "after": [
                "<Esc>"
            ]
        }
    ],
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": [
                "L"
            ],
            "after": [],
            "commands": [
                {
                    "command": "workbench.action.nextEditor"
                }
            ]
        },
        {
            "before": [
                "H"
            ],
            "after": [],
            "commands": [
                {
                    "command": "workbench.action.previousEditor"
                }
            ]
        },
        {
            "before": [
                "C-w"
            ],
            "after": [],
            "commands": [
                {
                    "command": "workbench.action.closeActiveEditor"
                }
            ]
        },
        {
            "before": [
                "<space>"
            ],
            "after": [
                "<leader>",
                "<leader>",
                "2",
                "s"
            ]
        }
    ],
    "vim.normalModeKeyBindings": [
        {
            "before": [
                "J"
            ],
            "after": [
                "1",
                "0",
                "j"
            ]
        },
        {
            "before": [
                "K"
            ],
            "after": [
                "1",
                "0",
                "k"
            ]
        },
        {
            "before": [
                "W"
            ],
            "after": [
                "3",
                "w"
            ]
        },
        {
            "before": [
                "B"
            ],
            "after": [
                "3",
                "b"
            ]
        },
        {
            "before": [
                "z",
                "a"
            ],
            "after": [
                "z",
                "c"
            ]
        },
        {
            "before": [
                "M"
            ],
            "after": [
                "$",
                "s"
            ]
        },
        {
            "before": [
                "g",
                "r"
            ],
            "commands": [
                "references-view.findReferences"
            ]
        },
    ],
    "vim.visualModeKeyBindings": [
        {
            "before": [
                "J"
            ],
            "after": [
                "1",
                "0",
                "j"
            ]
        },
        {
            "before": [
                "K"
            ],
            "after": [
                "1",
                "0",
                "k"
            ]
        },
        {
            "before": [
                "W"
            ],
            "after": [
                "3",
                "w"
            ]
        },
        {
            "before": [
                "B"
            ],
            "after": [
                "3",
                "b"
            ]
        }
    ],
    /**
     * Git
     */
    "git.confirmSync": false,
    "git.mergeEditor": false,
    "git.autorefresh": true,
    /**
     * Files
     */
    "files.autoSave": "off",
    "files.trimFinalNewlines": true,
    "files.associations": {
        "*.css": "css",
        "*.json": "jsonc"
    },
    /**
     * others
     */
    "javascript.updateImportsOnFileMove.enabled": "never",
    "todohighlight.defaultStyle": {
        "color": "#FB4934",
        "backgroundColor": "transparent"
    },
    "todohighlight.keywords": [
        "NOTE:",
        "BUG:",
        "IDEA:",
        "REVIEW:",
        {
            "text": "TODO:",
            "color": "#FB4934",
            "backgroundColor": "transparent"
        },
        {
            "text": "FIXME:",
            "color": "#FB4934",
            "backgroundColor": "transparent",
        }
    ],
    "subtleBrackets.style": {
        "borderWidth": "2px",
        "borderStyle": "solid none",
        "borderColor": "#c56c86",
    },
    "breadcrumbs.enabled": false,
    "breadcrumbs.filePath": "last",
    "notebook.breadcrumbs.showCodeCells": false,
    "extensions.ignoreRecommendations": true,
    "terminal.integrated.env.osx": {
        "FIG_NEW_SESSION": "1",
        "CW_NEW_SESSION": "1",
        "Q_NEW_SESSION": "1"
    },
    "zenMode.centerLayout": false,
    "diffEditor.ignoreTrimWhitespace": false,
    "security.workspace.trust.untrustedFiles": "open",
    "clock.dateFormat": "HH:MM",
    "color-highlight.matchWords": false,
    "emmet.excludeLanguages": [
        "markdown",
        "javascript",
        "javascriptreact",
        "typescript",
        "typescriptreact"
    ],
    "todo-tree.highlights.enabled": false,
    "update.mode": "manual",
    "github.copilot.enable": {
        "*": true,
        "plaintext": false,
        "markdown": false,
        "scminput": false
    },
    "[json]": {
        "editor.quickSuggestions": {
            "strings": true
        },
        "editor.suggest.insertMode": "replace"
    },
    "yaml.schemas": {
        "file:///Users/xibo.wang/.vscode/extensions/atlassian.atlascode-3.0.10/resources/schemas/pipelines-schema.json": "bitbucket-pipelines.yml"
    },
    "redhat.telemetry.enabled": true,
